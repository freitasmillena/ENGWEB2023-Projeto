extends layout

block content
    .mycontainer
        .title Upload Form
        .content
        form(action='/uploadForm' method='post' enctype="multipart/form-data")
          .user-details
            .input-box
              span.details Title
              input(type='text' name='title' placeholder='Enter a title' required='')
            .input-box
              span.details Description
              input(type='text' name='description' placeholder='Enter a short description' required='')
            .block-details
              span.title-category Category
              select.select-category(name='category' id='category' required='')
          .gender-details
            input#dot-1(type='radio' name='visibility' value='public')
            input#dot-2(type='radio' name='visibility' value='private')
            span.gender-title Visibility
            .category
              label(for='dot-1')
                span.dot.one
                span.gender Public
              label(for='dot-2')
                span.dot.two
                span.gender Private
              .hidden#groupsHidden
                .search-wrapper
                  i.fa-solid.fa-magnifying-glass
                  input.search-groups#searchInput(type='text' placeholder='Search here')
                #searchResult
                #selectedItems
                  
          .drop-zone 
            input.upload_hide#fileInput(type="file" name="myFile" required)
            input#fileSize(type="hidden" name="size")
            input#fileType(type="hidden" name="type")

            label.upload_label(for="upload_costum")  
              h3 Drag your file or click to upload
              i.fa-solid.fa-cloud-arrow-up
          section.hidden.uploaded-area#fileInfo

             
          .button
            input#myForm(type='submit' value='Register')
            

