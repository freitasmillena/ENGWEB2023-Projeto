extends layout

block content
    .mycontainer
        .title Reset Password
        .content
        form(action='/reset'  method='post')
          input(type='hidden' name='token' value=token)
          .form-group 
            input.form-control#passwordInput(type='password' name='password' placeholder='Password' required='')
      
          .form-group
            input.form-control#confirmPasswordInput(type='password' name='confirmpassword' placeholder='Confirm Password' required='')
          .strength-wrapper
              .strength-meter#strengthMeter
              span#strengthLevel
              ul#passwordRequirements.password-requirements
                li#lengthReq At least 8 characters
                li#uppercaseReq At least one uppercase letter
                li#lowercaseReq At least one lowercase letter
                li#numberReq At least one number
                li#specialCharReq At least one special character
                li#passwordMatchReq Passwords match 
          button.form#submit-button(type="submit" value="Send") Reset
            

