extends layout

block content
    .container-wrapper 
        .mycontainer.container-left 
            .title All Files
            .content
                .filter-container
                    .search-wrapper
                      i.fa-solid.fa-magnifying-glass
                      input.search-groups(type='text' placeholder='Search here')
                    .filter-selectors
                        .filter-sort
                            select#sort-by(name="sort")
                              option(value="" selected) Sort by
                              option(value="dateasc") Date Ascending
                              option(value="datedesc") Date Descending
                              option(value="alphasc") Alphabetically Ascending
                              option(value="alphadesc") Alphabetically Descending
                        .filter-sort
                            select#filter-by-type(name="sort")
                              option(value="" selected) Type
                              option(value="pdf") PDF
                              option(value="datedesc") JPEG
                              option(value="alphasc") HTML
                              option(value="alphadesc") PNG
            .header-files 
                .header-title Title
                .header-details
                  .header-detail Author
                  .header-detail Date
                  .header-detail Type
                  .header-detail Size
            
            each f in files
                .files-list
                    .header-title #{f.title}
                    .header-details
                      .header-detail #{f.creator}
                      .header-detail #{new Date(f.created).toLocaleDateString()}
                      .header-detail #{getFileExtension(f.type)}
                      .header-detail #{f.size}
        .mycontainer.container-right 
            .title News
